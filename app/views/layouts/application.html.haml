%html
  %head
    %title Playerpool
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    .pull-right= link_to 'sign out', destroy_user_session_path, :method => :delete
    .container
      - if notice.present?
        %p.alert.alert-success= notice
      - if alert.present?
        %p.alert.alert-error= alert

      = yield
