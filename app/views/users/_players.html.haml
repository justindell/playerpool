%h2= "#{@user.full_name}: #{@user.total_points} points"

%table
  %thead
    %tr
      %th Name
      %th Team
      %th Points
  %tbody
  - @user.players.each do |p|
    %tr{:class => "#{p.eliminated? ? 'eliminated' : ''} #{p.playing? ? 'playing' : ''}"}
      %td= p.full_name
      %td= p.team
      %td= p.points

%p#last_refresh= "Last refresh: #{(Time.now + 2.hours).strftime("%I:%M:%S %p")}"
