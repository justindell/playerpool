%h2= "#{@user.full_name}: #{@user.total_points} points"

%table
  %tr
    %th Name
    %th Team
    %th Points
  - @user.players.each do |p|
    %tr{:class => (p.eliminated? ? 'eliminated' : nil)}
      %td= p.full_name
      %td= p.team
      %td= p.points

%p#last_refresh= "Last refresh: #{Time.now.strftime("%I:%M:%S %p")}"
